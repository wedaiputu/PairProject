<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BETAMIDI</title>
    <br>
    <%- include('_style.ejs') %>
    
</head>
<body>
    <%- include('_navbar.ejs') %>
    <br>
    <div class="containerForm" style="justify-items: center;">
        <h1>Add Employee</h1>
        <h3>Store Name : <%= result.name %> </h3>
            <% if (errors) { %>
                <% errors.split(';').forEach((el) => { %>
                    <p style="color: red"><%= el %></p>
                <% }) %>
            <% } %>
            
        <form action="" method="post">
            
            <div class="input-group">
                <div class="nameInput">
                    <label for="firstName">First Name</label>
                    <input type="text" id="firstName" name="firstName" style="padding-bottom: 5px;">
                    <label for="lastName">Last Name</label>
                    <input type="text" id="lastName" name="lastName">
                </div>
            </div>
            
            <div class="input-group">
                <div class="nameInput">
                    <label>Date of Birth</label>
                    <input type="date" name="dateOfBirth"><br>
                    <label>Education</label><br>
                </div>
            </div>   

            <div class="input-group">
                <div class="nameInput">
                    <select name="education">
                        <option disabled selected>Select Education</option>
                        <% const education= ["SMA","S1","S2","S3"] %>
                        <% education.forEach(element =>{ %>
                            <option value="<%=element%>"><%=element%></option>
                        <% })%>
                    </select>
                    <br>
                </div>
            </div>
                
            
            <div class="input-group">
                <p>Position:</p>
                <% const position=["Staff","Supervisor","Manager","CEO"] %>
                <% position.forEach(el => { %>
                    <input type="radio" name="position" value="<%=el%>">
                    <label><%=el%></label>
                <% }) %>
            </div>
            <br>
            
            <label>Salary</label><br>
            <input type="number" name="salary">
            <br>
            <br>
            <button type="submit" value="add employee">Add Employee</button>
        </form>

    </div>
</body>
</html>
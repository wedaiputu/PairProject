<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>STORE</title>
    <br>
    <%- include('_navbar.ejs') %>
    <%- include('_style.ejs') %>
   
</head>
<body >
    <br>
    <div style="display: flex; justify-content: center;">
        <h1 class="navbar-menu" class="text-3xl font-bold underline">
            <a style="text-align: center; font-size: 34px;">BETAMIDI CMS</a>
        </h1>
    </div>
    
    <div style="display: flex; justify-content: center; align-items: center;">
        <table>
            <thead>
              <tr style="text-align: center">
                <th>Name</th>
                <th>Code</th>
                <th>Location</th>
                <th>Category</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% result.forEach((el) => { %>
              <tr style="text-align: center;">
                <td><%= el.name %></td>
                <td><%= el.code %></td>
                <td><%= el.location %></td>
                <td><%= el.category %></td>
                <td><a href="/stores/<%= el.id %>" class="action">See Table</a></td>
              </tr>
              <% }); %>
            </tbody>
        </table>
    </div>
    


</body>
</html>